# Audio directory path(s) (optional, defaults to /public/audio)
# For multiple directories, separate with commas
# Use path:name format to give custom names to directories
# These names will appear in the UI and URLs will use slugified versions of these names
# AUDIO_DIR=/path/to/audio1:Music Library,/path/to/audio2:Podcasts,/path/to/audio3:Audiobooks

# Default title and description
DEFAULT_TITLE="Audio Archive"
DEFAULT_DESCRIPTION="Browse and listen to audio files"

# Rate limiting configuration
RATE_LIMIT_WINDOW=60000 # 1 minute
MAX_REQUESTS_PER_WINDOW=100
AUDIO_FILE_LIMIT=10
SHARE_REQUEST_LIMIT=3 # Max artist requests per day
SHARE_LIMIT_WINDOW=86400000 # 24 hours

# NTFY configuration for source requests
NTFY_URL=https://ntfy.sh
NTFY_TOPIC=your-private-topic
NTFY_TOKEN=your-private-token
NTFY_PRIORITY=1

# Analytics configuration (optional)
# Umami analytics - leave empty to disable
# NEXT_PUBLIC_UMAMI_URL=https://your-umami-instance.com/script.js
# NEXT_PUBLIC_UMAMI_WEBSITE_ID=your-website-id